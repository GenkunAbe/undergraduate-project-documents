\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeXJTUstyle}[2015/12/27 v0.0.1 The XJTUstyle Beamer Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Load required packages
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz}
\usetikzlibrary{external}
\RequirePackage{calc}
\RequirePackage{graphicx}
\RequirePackage{subfig}
\RequirePackage{caption}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeXJTUstyle}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeXJTUstyle}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeXJTUstyle}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeXJTUstyle}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeXJTUstyle}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeXJTUstyle}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeXJTUstyle}}

\DeclareOptionBeamer{xjtured}{%
  \PassOptionsToPackage{xjtured}{beamercolorthemeXJTUstyle}%
  \PassOptionsToPackage{xjtured}{beamerinnerthemeXJTUstyle}%
  \PassOptionsToPackage{xjtured}{beamerouterthemeXJTUstyle}%
  }
\DeclareOptionBeamer{xjtublue}{%
  \PassOptionsToPackage{xjtublue}{beamercolorthemeXJTUstyle}%
  \PassOptionsToPackage{xjtublue}{beamerinnerthemeXJTUstyle}%
  \PassOptionsToPackage{xjtublue}{beamerouterthemeXJTUstyle}%
  }
\DeclareOptionBeamer{english}{%
  \PassOptionsToPackage{english}{beamerinnerthemeXJTUstyle}%
  }
\DeclareOptionBeamer{sidebar}{%
  \PassOptionsToPackage{sidebar}{beamercolorthemeXJTUstyle}%
  \PassOptionsToPackage{sidebar}{beamerinnerthemeXJTUstyle}%
  \PassOptionsToPackage{sidebar}{beamerouterthemeXJTUstyle}%
  }
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \useinnertheme{XJTUstyle}
  \useoutertheme{XJTUstyle}
  \usecolortheme{XJTUstyle}
  \usefonttheme{XJTUstyle}
}%end of beamer specific options

\mode<all>
